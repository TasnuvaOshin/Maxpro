<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
 android:id="@+id/root"
    tools:context=".Admin.Fragment.AdminAnswerFragment"


    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_marginTop="100dp"
        android:layout_marginBottom="100dp"

        >

        <android.support.design.widget.TextInputLayout
            android:id="@+id/ans_qus_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"

            >


            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_ans_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Question One Answer"
                android:textAlignment="center"
                android:textSize="16sp"



                />


        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/ans_qus_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ans_qus_one"
            android:layout_margin="15dp"

            >


            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_ans_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Question Two Answer"
                android:textAlignment="center"
                android:textSize="16sp"



                />


        </android.support.design.widget.TextInputLayout>


        <Button
            android:id="@+id/bt_ans_submit"
            style="@style/Widget.AppCompat.Button.Colored"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ans_qus_two"
            android:layout_centerHorizontal="true"
            android:text="Submit" />

    </RelativeLayout>

</RelativeLayout>